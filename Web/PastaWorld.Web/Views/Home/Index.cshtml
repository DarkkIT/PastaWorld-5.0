@model PastaWorld.Web.ViewModels.News.NewsListViewModel
@using PastaWorld.Common
@{
    this.ViewData["Title"] = "Home Page";
}

<head>
    <link href="~/css/home.css" rel="stylesheet" asp-append-version="true" />
    <link href="https://fonts.googleapis.com/css2?family=Pattaya&display=swap" rel="stylesheet">
</head>

<div class="background">

    <div class="ml-5 mr-5">

        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            <ol class="carousel-indicators">
                <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
            </ol>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img class="img-fluid w-100" src="/images/carousel/Untitled1.png" alt="First slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="display-4 mb-5 pb-3">Welcome to PastaWorld!</h5>
                        <p class="mb-5">Най-добрата паста във Варна</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="img-fluid w-100" src="/images/carousel/Untitled2.png" alt="Second slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="display-4 mb-5 pb-3">Welcome to PastaWorld!</h5>
                        <p class="mb-5">Най-добрата паста във Варна</p>
                    </div>
                </div>
                <div class="carousel-item">
                    <img class="img-fluid w-100" src="/images/carousel/Untitled3.png" alt="Third slide">
                    <div class="carousel-caption d-none d-md-block">
                        <h5 class="display-4 mb-5 pb-3">Welcome to PastaWorld!</h5>
                        <p class="mb-5">Най-добрата паста във Варна</p>
                    </div>
                </div>
            </div>
            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <hr size="15" width="90%" color="black">


    @*Button Menu*@

    <div class="row justify-content-center">
        <div class="row col-md-9">
            <img class="img-fluid" src="~/images/home/Untitled.png" alt="Responsive image" style="max-width: 100%;" />
        </div>
        @*<div class="ml-4 mr-4">

            </div>*@

        <div class="row col-md-2">
            <a class="button" asp-controller="AllMenu" asp-action="Index"><span>Menu </span></a>
        </div>
    </div>


    <hr size="15" width="90%" color="black">

    <div class="row justify-content-center">
        @foreach (var news in Model.NewsList)
        {
            <div id="newsHomeCard" class="card m-3 mt-5 col-md-3">
                <div class="thumbnail">
                    <img class="card-img" src=@news.MainImagePath alt="news">
                </div>
                <div class="card-body">
                    <span class="badge badge-success">News</span>
                    <h4 class="card-title mt-2">@news.Name</h4>
                    <p class="card-text">@news.Description</p>
                </div>

                <div class="card-footer row justify-content-md-end">
                    <a class="btn btn-success" asp-controller="Home" asp-action="NewsDetails" asp-route-id="@news.Id">Read More</a>
                </div>

            </div>
        }
    </div>

    <hr size="15" width="90%" color="black">

</div>